<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:id="@+id/glow"
        android:layout_width="@dimen/glow_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/glow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBtn"
        android:layout_width="@dimen/link_btn_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/glow"
        app:layout_constraintLeft_toLeftOf="@id/glow"
        app:layout_constraintRight_toRightOf="@id/glow"
        app:layout_constraintTop_toTopOf="@id/glow"
        tools:srcCompat="@drawable/tab_gift_no_glow"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dip"
        android:fontFamily="@font/eras"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>